    "build:vite": "vite build",
    "build:tsup": "tsup plugin/index.ts --dts --sourcemap --format esm,cjs",
    "check": "tsc --noEmit -p tsconfig.json",
    "clean": "rm -rf dist",
    "watch": "tsc -w -p tsconfig.json",
    "prepublishOnly": "npm run build",
    "test": "jest src",
    "global": "pnpm -g ln"
  },
  "dependencies": {
